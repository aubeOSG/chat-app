{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.iterable",
      "es5",
      "es6",
      "esnext",
      "ES5",
      "ES6",
      "ESNext"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "stripInternal": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "inlineSources": false,
    "composite": false,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "types/*.d.ts"],
  "exclude": ["build", "dist", "node_modules", "src/**/*.html"]
}
