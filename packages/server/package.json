  },
  "prettier": "@chat-app/config/prettier",
  "stylelint": {
    "extends": "@chat-app/config/stylelint"
  },
  "devDependencies": {
    "@chat-app/config": "^0.0.1",
    "@parcel/packager-ts": "2.8.3",
    "@parcel/transformer-typescript-types": "2.8.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.16",
    "@types/node": "^18.11.18",
    "eslint": "^8.33.0",
    "nodemon": "^2.0.20",
    "parcel": "^2.8.3",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "stylelint": "^14.16.1",
    "typescript": "^4.9.4",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
