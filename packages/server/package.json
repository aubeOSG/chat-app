{
  "name": "@chat-app/server",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/main.js",
  "module": "./dist/module.js",
  "types": "dist/types.d.ts",
  "scripts": {
    "prewatch": "rimraf dist",
    "watch": "parcel watch --target main --no-cache",
