    "postcss-modules": "^4.3.0",
    "process": "^0.11.10",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.3.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "framer-motion": "^9.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
